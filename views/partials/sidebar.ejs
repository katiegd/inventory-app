<div class="sidebar">
  <!-- Sort by Price -->

  <form action="/products" method="get">
    <label for="sort" class="form-title">Sort By Price:</label><br />
    <input type="radio" name="sort" id="priceAsc" value="priceAsc" <%= sort ===
    'priceAsc' ? 'checked' : ''%> onchange="this.form.submit()" />
    <label for="priceAsc">Ascending</label><br />
    <input type="radio" name="sort" id="priceDesc" value="priceDesc" <%= sort
    === 'priceDesc' ? 'checked' : ''%> onchange="this.form.submit()" />
    <label for="priceDesc">Descending</label><br />
  </form>

  <!-- Sort by Name -->

  <form action="/products" method="get">
    <label for="sort" class="form-title">Sort By Name:</label><br />
    <input type="radio" name="sort" id="nameAsc" value="nameAsc" <%= sort ===
    'nameAsc' ? 'checked' : ''%> onchange="this.form.submit()" />
    <label for="nameAsc">Ascending</label><br />
    <input type="radio" name="sort" id="nameDesc" value="nameDesc" <%= sort ===
    'nameDesc' ? 'checked' : ''%> onchange="this.form.submit()" />
    <label for="nameDesc">Descending</label><br />
  </form>

  <!-- Filter by Category -->

  <form action="/products" method="get" onchange="this.submit()">
    <label for="filter" class="form-title">Filter By Category:</label><br />

    <% listedCategories.forEach((category) => { %> <input type="checkbox"
    id="<%= category.category%>" name="category" value="<%= category.category
    %>" <%= selectedCategory && selectedCategory.includes(category.category) ?
    'checked' : '' %>/>
    <label
      for="<%= category.category %>"
      class="category-label"
      style="
        color: <%=category.fontColor%>;
        background-color: <%=category.color%>;
      "
    >
      <%= category.category %></label
    ><br />

    <% }) %>
  </form>

  <!-- Filter by Color -->
</div>
